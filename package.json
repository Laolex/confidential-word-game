{
  "name": "confidential-word-game",
  "version": "1.0.0",
  "description": "A fully homomorphic encrypted word guessing game using Zama's fhEVM",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network hardhat",
    "deploy:zama": "hardhat run scripts/deploy.js --network zamaDevnet",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "relayer": "node scripts/relayer.js",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "verify:sepolia": "hardhat verify --network sepolia",
    "prettier": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "docker:up": "docker-compose up",
    "docker:up:detached": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:down:volumes": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:relayer": "docker-compose logs -f relayer",
    "docker:logs:gateway": "docker-compose logs -f mock-gateway",
    "docker:restart": "docker-compose restart",
    "docker:ps": "docker-compose ps",
    "events:listen": "node scripts/event-listener.js",
    "events:monitor": "node scripts/monitor-game.js",
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "copy-abi": "cp artifacts/contracts/ConfidentialWordGame.sol/ConfidentialWordGame.json frontend/src/contracts/",
    "setup": "npm install && npm run frontend:install && npm run compile && npm run copy-abi",
    "dev:all": "concurrently \"npm run node\" \"npm run relayer\" \"npm run frontend:dev\" \"npm run events:monitor\""
  },
  "keywords": [
    "fhe",
    "fhevm",
    "zama",
    "confidential",
    "word-game",
    "blockchain",
    "ethereum",
    "solidity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "fhevm": "^0.6.2",
    "fhevmjs": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
